<$ROOT/mkconfig

TARG=\
	rlayout.dis\
	tlayout.dis\
	imgrender.dis\
	mdrender.dis\
	htmlrender.dis\
	pdfrender.dis\
	mdfmt.dis\
	htmlfmt.dis\

